// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  OFFICER
  CITIZEN // Keeping CITIZEN in enum for backward compatibility of complaints, even if they don't login
}

enum Status {
  OPEN
  IN_PROGRESS
  RESOLVED
  CLOSED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role
  ward      Int?
  createdAt DateTime @default(now())
  
  complaints Complaint[] @relation("OfficerComplaints")
}

model Complaint {
  id          String   @id @default(cuid())
  complaintId String   @unique @default(uuid())
  name        String
  phone       String
  ward        Int
  category    String
  description String
  imageUrl    String?
  status      Status   @default(OPEN)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  officerId   String?
  officer     User?    @relation("OfficerComplaints", fields: [officerId], references: [id])
  notes       String?
}
